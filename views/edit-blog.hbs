{{#with blog}}

<div class="edit-form">
    <form action="/blog/edit/{{_id}}/edit" method="POST" enctype="multipart/form-data">

        <label for="title">Blog Title</label>
        <input name="title" type="text" value="{{title}}">
        <br>
        <label for="text">Blog Text</label>
        <input name="text" type="textarea" value="{{text}}">
        <br>
        <button type="submit">Submit Chnages</button>

    </form>
</div>

{{/with}}